<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/superHeroImage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/superHeroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="BatMan"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/superHeroImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/superHeroId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"/>

        <TextView
            android:id="@+id/superHeroBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Base"
            app:layout_constraintTop_toBottomOf="@+id/superHeroId"/>

        <TextView
            android:id="@+id/superHeroOccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Occupation"
            app:layout_constraintTop_toBottomOf="@+id/superHeroBase"/>

        <TextView
            android:id="@+id/biographyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biography:"
            app:layout_constraintTop_toBottomOf="@+id/superHeroOccupation"/>

        <TextView
            android:id="@+id/superHeroFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="FullName"
            app:layout_constraintTop_toBottomOf="@+id/biographyTitle"/>

        <TextView
            android:id="@+id/superHeroAlterEgos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="AlterEgos"
            app:layout_constraintTop_toBottomOf="@+id/superHeroFullName"/>

        <TextView
            android:id="@+id/aliases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Aliases"
            app:layout_constraintTop_toBottomOf="@+id/superHeroAlterEgos"/>

        <TextView
            android:id="@+id/fisrtAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="firstAppearance"
            app:layout_constraintTop_toBottomOf="@+id/aliases"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>